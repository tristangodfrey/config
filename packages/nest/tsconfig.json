{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "types": [
    "node",
    "jest"
  ],
  "exclude": ["tests", "dist"]
}
